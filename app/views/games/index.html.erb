<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row mt-1'>
      <div class='col-md-3'>
        <div class = "row mt-3">
          <div class= 'col-md-12 sidebar_fixed'>
          <%# 後にゲーム投稿部を移動 %>
            <div class= "post game">お探しのタイトルが見つかりませんか？
              <%= link_to new_game_path, class:"btn btn-primary btn-block" do %>
                新規作成
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class='col-md-8 offset-md-1'>
        <div class='row'>
          <div class='col-md-12'>
          </div>
        <div class='row mt-3'>
          <div class='col-md-12'>
            <table class='table table-hover table-inverse'>
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Reviews</th>
                  <th></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @games.each do |game| %>
                  <tr>
                    <td>
                      <h4>
                        <%= link_to game_path(game.id) do%>
                          <%= attachment_image_tag game, :game_image, size: "100x100", format: 'jpg', fallback: "default-image.jpg", size:'55x55' %>
                          <%= game.game_title %>
                        <% end %>
                      </h4>
                    </td>
                    <td>
                      <%= game.post_reviews.count %> Reviews
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
