        <h2 class="mt-3">New Game</h2>
        <%= form_with model: game, local:true do |f| %>
          <div class="field">
            <%= f.label :title %><br />
            <%= f.text_field :game_title %>
          </div>
          <div class="field">
            <%= f.label :about %><br />
            <%= f.text_area :about %>
          </div>
          <div class="field">
            <%= f.label :game_image,'Image' %><br />
            <%= f.attachment_field :game_image %>
          </div>
          <div class="actions">
            <%= f.submit 'Post Game', class: "btn btn-success"%>
          </div>
        <% end %>
        