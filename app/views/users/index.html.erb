<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%# レイアウト要調整 %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <div class="row">
          <div class="col-md-3">
            <h2><%= @users.count %>  Users</h2>
          </div>
          <div class="col-md-8">
          </div>
        </div>
        <div class="row">
        </div>
        <table class='table table-hover table-inverse col-md-6'>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <h4>
                    <%= link_to user_path(user.id) do%>
                    <%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpg', fallback: "default-image.jpg", size:'55x55' %>
                    <%= user.name %>
                    <% end %>
                  </h4>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
