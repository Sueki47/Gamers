<main>
  <p id="notice"><%= flash[:notice] %></p>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
          <h2>User info</h2>
          <%= form_with model:@user, local:true do |f| %>
            <div class="field">
              <%= f.label :name,'Name' %><br />
              <%= f.text_field :name %>
            </div>
            <div class="field">
                <%= f.label :profile_image,'Image' %><br />
              <%= f.attachment_field :profile_image %>
            </div>
            <div class="field">
              <%= f.label :introduction,'Introduction' %><br />
              <%= f.text_area :introduction, rows:'2' %>
            </div>
            <%= f.submit "Update User" , class: "btn btn-secondary"%>
          <% end %>
        </div>
      </div>
    </div>
